<div class="container">
<h1 align ="center">Edit TV</h1>
      <hr>
        <%= render 'nav' =%>
      <hr>

<%= form_with(model: @tv, local: true) do |form| %>
 
<p align="center">
    <%= form.label :manufacture %><br>
    <%= form.text_field :manufacture %>
  </p>
  <p align="center">
    <%= form.label :model %><br>
    <%= form.text_field :model %>
  </p>
  <p align="center">
    <%= form.label :model_year %><br>
    <%= form.date_field :model_year %>
  </p>
  <p align="center">
    <%= form.label :serial %><br>
    <%= form.text_field :serial %>
  </p>
  <p align="center">
    <%= form.label :ahc_number %><br>
    <%= form.text_field :ahc_number %>
  </p>
  <p align="center">
    <%= form.label :classroom %><br>
    <%= form.text_field :classroom %>
  </p>
  <p align="center">
    <%= form.label :date_install %><br>
    <%= form.date_field :date_install %>
  </p>
  <p align="center">
    <%= form.submit :class => 'btn btn-primary mb-2' %>
  </p>
 
<% end %>
 
<%= link_to 'Back', tvs_path, style: "color: white;" %>
    <br></br>
    <br></br>
</div>

