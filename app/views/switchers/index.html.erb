<!DOCTYPE html>

<html>
    
<header>
    <meta charset="UTF-8">
</header>
<style>
    hr
    {
        border: 1px solid black;
    }
  .float-right 
  {
  background-color: darkgray;
  color: white;
  border: 2px solid #555555;
  }
  .float-right:hover
  {
  background-color: #555555;
  color: white;
  }
  input.form-control
  {
    background-color: #4d4d4d;
    color:white;
  }
</style>
<body>
<h1 align="center">Switcher Data</h1>
<hr>
  <%= render 'nav' %>
<hr>  


<div class="container">
  <input class ="form-control" id="myInput" type="text" placeholder="Search the Table">
  <br>
  <table class="table table-hover table-dark", id="myTable2">
    <thead>
      <tr>
        <th scope="col", onclick="sortTable(0)">Manufacture</th>
        <th scope="col", onclick="sortTable(1)">Model</th>
        <th scope="col", onclick="sortTable(2)">Serial</th>
        <th scope="col", onclick="sortTable(3)">Classroom</th>
        <th scope="col", onclick="sortTable(4)">Audio</th>
      </tr>
    </thead>
    <tbody id="myTable">
      <% @switchers.each do |swi| %>
      <tr>
        <td><%= swi.manufacture %></td>
        <td><%= swi.model %></td>
        <td><%= swi.serial %></td>
        <td><%= swi.classroom %></td>
        <td><%= swi.audio %></td>
        <td><%= link_to 'Show', switcher_path(swi) %></td>
        <td><%= link_to 'Edit', edit_switcher_path(swi) %></td>
        <td><%= link_to 'Destroy', switcher_path(swi),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'Back to Dashboard', landing_path %>
  <%= link_to '<button type="button" class="float-right">New Switcher</button>'.html_safe, new_switcher_path %>
</div>

<script>
  $(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});  
  
</script>
</body>
</html>